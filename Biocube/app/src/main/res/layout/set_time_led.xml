<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/clock"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/clock"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="166dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM"
            android:layout_marginBottom="24dp"
            android:layout_above="@+id/am_12"
            android:layout_toLeftOf="@+id/am_12"
            android:layout_toStartOf="@+id/am_12" />

        <Button
            android:id="@+id/btn_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM"
            android:layout_alignBaseline="@+id/btn_am"
            android:layout_alignBottom="@+id/btn_am"
            android:layout_toRightOf="@+id/am_12"
            android:layout_toEndOf="@+id/am_12" />


        <Button
            android:id="@+id/am_01"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="01"
            android:layout_above="@+id/clock"
            android:layout_alignRight="@+id/clock"
            android:layout_alignEnd="@+id/clock" />

        <Button
            android:id="@+id/am_02"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="02"
            android:layout_alignBaseline="@+id/am_10"
            android:layout_alignBottom="@+id/am_10"
            android:layout_toRightOf="@+id/clock"
            android:layout_toEndOf="@+id/clock"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/am_03"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="03"
            android:layout_alignBaseline="@+id/am_09"
            android:layout_alignBottom="@+id/am_09"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/am_04"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="04"
            tools:layout_editor_absoluteY="325dp"
            tools:layout_editor_absoluteX="301dp"
            android:layout_below="@+id/am_09"
            android:layout_toRightOf="@+id/clock"
            android:layout_toEndOf="@+id/clock"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/am_05"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="05"
            tools:layout_editor_absoluteY="379dp"
            tools:layout_editor_absoluteX="247dp"
            android:layout_below="@+id/clock"
            android:layout_alignRight="@+id/clock"
            android:layout_alignEnd="@+id/clock" />

        <Button
            android:id="@+id/am_06"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="06"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/clock"
            android:layout_alignLeft="@+id/am_12"
            android:layout_alignStart="@+id/am_12" />

        <Button
            android:id="@+id/am_07"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="07"
            android:layout_below="@+id/clock"
            android:layout_alignLeft="@+id/am_11"
            android:layout_alignStart="@+id/am_11" />

        <Button
            android:id="@+id/am_08"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="08"
            android:layout_alignBaseline="@+id/am_04"
            android:layout_alignBottom="@+id/am_04"
            android:layout_toLeftOf="@+id/clock"
            android:layout_toStartOf="@+id/clock"
            android:layout_marginTop="12dp"/>


        <Button
            android:id="@+id/am_09"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="09"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/am_10"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="10"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="196dp"
            android:layout_marginTop="11dp"
            android:layout_alignTop="@+id/clock"
            android:layout_toLeftOf="@+id/clock"
            android:layout_toStartOf="@+id/clock" />

        <Button
            android:id="@+id/am_11"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="11"
            android:layout_above="@+id/clock"
            android:layout_alignLeft="@+id/clock"
            android:layout_alignStart="@+id/clock" />

        <Button
            android:id="@+id/am_12"
            android:layout_width="54dp"
            android:layout_height="43dp"
            android:text="12"
            android:layout_above="@+id/clock"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp" />


</RelativeLayout>
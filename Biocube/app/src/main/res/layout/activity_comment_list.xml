<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seongjun.biocube.CommentListActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_commentlist"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#52B94B"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="My Comment"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/text_nohavecomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="작성한 코멘트가 없습니다."
        android:textSize="25sp"
        android:textColor="@color/dark"
        android:gravity="center"
        android:layout_margin="20dp"
        android:visibility="gone">
    </TextView>

    <ListView
        android:id="@+id/list_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

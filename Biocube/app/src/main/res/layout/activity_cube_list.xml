<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cubelist"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#52B94B"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:src="@drawable/logo_title_small_200x77" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/title_mycybe_380x94" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/text_nohavecube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록한 큐브가 없습니다."
        android:textSize="25sp"
        android:textColor="@color/dark"
        android:gravity="center"
        android:layout_margin="20dp"
        android:visibility="gone">
    </TextView>

    <ListView
        android:id="@+id/list_cube"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="#00000000"
        android:layout_weight="0.9"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="* 큐브를 삭제하려면 해당 큐브를 길게 누르세요"
        android:textSize="18dp"
        android:layout_weight="0.1"
        android:gravity="center"/>
</LinearLayout>
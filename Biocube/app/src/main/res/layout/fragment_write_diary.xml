<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seongjun.biocube.WriteDiaryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_selectPlant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="selectplant" />

        <ImageButton
            android:id="@+id/btn_addImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            app:srcCompat="@android:drawable/ic_input_add" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_selectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="selectdate" />

            <Button
                android:id="@+id/btn_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sensor" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_selectfilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="selectplant" />

        <EditText
            android:id="@+id/edit_writeContents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.62"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="contents" />

    </LinearLayout>
</FrameLayout>

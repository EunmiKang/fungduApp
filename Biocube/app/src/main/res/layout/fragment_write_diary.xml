<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seongjun.biocube.WriteDiaryFragment"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_diary"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#52B94B"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:src="@drawable/logo_title_small_200x77" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/title_note_380x94" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"/>

        <ImageButton
            android:id="@+id/btn_diary_register"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.08"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/note_up_131x131" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.22">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="큐브"
                android:textSize="15sp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:padding="5dp"/>

            <Spinner
                android:id="@+id/spinner_cube"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_addImage"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="#ffffff"
                android:layout_margin="5dp"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/btn_sensor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="센서 값 읽기"
                android:background="#ffffff"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="적용할 필터"
                android:textSize="15sp"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/spinner_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"/>
        </LinearLayout>

        <EditText
            android:id="@+id/text_diary_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:inputType="textMultiLine"
            android:imeOptions="flagNoExtractUi"/>

    </LinearLayout>
</LinearLayout>

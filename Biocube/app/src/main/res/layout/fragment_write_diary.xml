<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seongjun.biocube.WriteDiaryFragment"
    android:orientation="vertical"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_diary"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#52B94B"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:src="@drawable/logo_title_small_200x77" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/title_note_380x94" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:weightSum="1.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1"
            android:background="@drawable/border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="큐브 선택"
                android:textSize="15sp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:padding="5dp"/>

            <Spinner
                android:id="@+id/spinner_cube"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="적용할 필터"
                android:textSize="15sp"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/spinner_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="작성일"
                android:textSize="15sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#ffffff"
                android:layout_margin="5dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/border">

            <Button
                android:id="@+id/btn_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택한 큐브의 센서 값 읽어오기"
                android:background="#ffffff"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1"
            android:background="@drawable/border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="사진 선택"
                android:textSize="15sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:padding="1dp">

                <ImageButton
                    android:id="@+id/btn_addImage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/add_note"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1"
            android:background="@drawable/border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="내용 입력"
                android:textSize="15sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/text_diary_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:inputType="textMultiLine"
                android:imeOptions="flagNoExtractUi"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_diary_register"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:background="@drawable/note_up_131x131"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>

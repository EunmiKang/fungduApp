<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cubeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.seongjun.biocube.CubeFragment"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cube"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#52B94B"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/logo_title_small_200x77" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/title_control_380x94" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12"/>

            <ImageButton
                android:id="@+id/btn_cube_regist"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.08"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/add_77x77" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <Spinner
                android:id="@+id/spinner_cube_cubeselect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.8" />

            <Button
                android:id="@+id/btn_connect"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="연결"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.8"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="1"
                android:background="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="측정값"
                    android:textSize="15sp"
                    android:background="@drawable/border"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.85"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/cont_temp_138x138" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="대기 온도"
                            android:textSize="13sp"
                            android:textColor="@color/lightDark"/>

                        <TextView
                            android:id="@+id/text_temp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/cont_airhue_138x138" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="대기 습도"
                            android:textSize="13sp"
                            android:textColor="@color/lightDark"/>
                        <TextView
                            android:id="@+id/text_humi_air"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/cont_soilhue_138x138" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="토양 습도"
                            android:textSize="13sp"
                            android:textColor="@color/lightDark"/>

                        <TextView
                            android:id="@+id/text_humi_soil"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="0.95"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="장치 설정"
                    android:textSize="15sp"
                    android:background="@drawable/border"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.8"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="LED"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.4">

                            <ImageButton
                                android:id="@+id/btn_led"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/control_light_set"
                                android:clickable="true" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_led"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.15"
                            android:gravity="center"
                            android:text="OFF"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btn_ledTime"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"
                            android:gravity="center"
                            android:text="시간 설정"
                            android:textColor="#FFFFFF"
                            android:theme="@style/BioCubeButton" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="모터"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.4">

                            <ImageButton
                                android:id="@+id/btn_pump"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/control_motor"
                                android:clickable="true" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_motor"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.15"
                            android:gravity="center"
                            android:text="OFF"
                            android:textSize="12sp" />


                        <Button
                            android:id="@+id/btn_pumpTime"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"
                            android:gravity="center"
                            android:text="시간 설정"
                            android:textColor="#FFFFFF"
                            android:theme="@style/BioCubeButton" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
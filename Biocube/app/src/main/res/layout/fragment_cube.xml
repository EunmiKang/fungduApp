<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cubeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.seongjun.biocube.CubeFragment"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cube"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#52B94B"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:src="@drawable/logo_title_small_200x77" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/title_control_380x94" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12"/>

            <ImageButton
                android:id="@+id/btn_cube_regist"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.08"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/add_77x77" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.1"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="큐브선택"
                android:textColor="?attr/colorControlNormal"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spinner_cube_cubeselect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.7"
                android:textColor="?attr/colorControlNormal" />

            <Button
                android:id="@+id/btn_connect"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="연결"
                android:textColor="?attr/colorControlNormal"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.8"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="0.95">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="측 정 값"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.8"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/cont_temp_138x138" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="대기 온도"
                            android:textColor="@color/lightDark"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_temp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/cont_airhue_138x138" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="대기 습도"
                            android:textColor="@color/lightDark"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_humi_air"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/cont_soilhue_138x138" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="토양 습도"
                            android:textColor="@color/lightDark"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_humi_soil"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="0.95">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="0.8"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/btn_led"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/cont_time_light_on_145x135" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="조명"
                                android:textColor="@color/lightDark"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cont_time_bg">

                            <ImageButton
                                android:id="@+id/led_am_00"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="24.5dp"
                                android:layout_marginTop="11dp"
                                android:background="@drawable/cont_time_off_65x65" />

                            <ImageButton
                                android:id="@+id/led_am_02"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_am_00"
                                android:layout_marginLeft="12dp"
                                android:layout_marginStart="11dp"
                                android:layout_toEndOf="@+id/led_am_00"
                                android:layout_toRightOf="@+id/led_am_00"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_am_04"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_am_02"
                                android:layout_marginLeft="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@+id/led_am_02"
                                android:layout_toRightOf="@+id/led_am_02"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_am_06"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_am_04"
                                android:layout_marginLeft="11dp"
                                android:layout_marginStart="11dp"
                                android:layout_toEndOf="@+id/led_am_04"
                                android:layout_toRightOf="@+id/led_am_04"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_am_08"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_am_06"
                                android:layout_marginLeft="11dp"
                                android:layout_marginStart="11dp"
                                android:layout_toEndOf="@+id/led_am_06"
                                android:layout_toRightOf="@+id/led_am_06"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_am_10"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_am_08"
                                android:layout_marginLeft="11dp"
                                android:layout_marginStart="11dp"
                                android:layout_toEndOf="@+id/led_am_08"
                                android:layout_toRightOf="@+id/led_am_08"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_pm_12"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignLeft="@+id/led_am_10"
                                android:layout_alignStart="@+id/led_am_10"
                                android:layout_below="@+id/led_am_10"
                                android:layout_marginLeft="14dp"
                                android:layout_marginStart="13dp"
                                android:layout_marginTop="9dp"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_pm_14"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_pm_12"
                                android:layout_marginRight="-1dp"
                                android:layout_toLeftOf="@+id/led_pm_12"
                                android:layout_toStartOf="@+id/led_pm_12"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_pm_16"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_pm_14"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/led_pm_14"
                                android:layout_toStartOf="@+id/led_pm_14"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_pm_18"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_pm_16"
                                android:layout_marginRight="11dp"
                                android:layout_toLeftOf="@+id/led_pm_16"
                                android:layout_toStartOf="@+id/led_pm_16"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_pm_20"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_pm_18"
                                android:layout_marginRight="11dp"
                                android:layout_toLeftOf="@+id/led_pm_18"
                                android:layout_toStartOf="@+id/led_pm_18"
                                android:background="@drawable/cont_time_on_light_65x65" />

                            <ImageButton
                                android:id="@+id/led_pm_22"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignTop="@+id/led_pm_20"
                                android:layout_marginEnd="11dp"
                                android:layout_marginRight="11dp"
                                android:layout_toLeftOf="@+id/led_pm_20"
                                android:layout_toStartOf="@+id/led_pm_20"
                                android:background="@drawable/cont_time_on_light_65x65" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/btn_pump"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/cont_time_pump_on_139x129" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="모터"
                                android:textColor="@color/lightDark"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cont_time_bg">

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="시간설정"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>